{
  "name": "@localizesh/processor-txt",
  "description": "A Localize.sh processor for TXT files",
  "repository": "localizesh/processor-txt",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "localize-processor-txt": "dist/bin.js"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "test": "vitest run"
  },
  "dependencies": {
    "@localizesh/sdk": "^2.1.0",
    "eol": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
